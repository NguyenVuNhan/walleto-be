{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es6"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["build", "node_modules"]
}
